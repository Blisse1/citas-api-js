<%- include('header') %>

<!--Form pacientes -->
<header>
    <h1 id="title">Patients Creation</h1>
    <p id="description">Form To Create Patients</p>
</header>
<div>
    <main>
        <form action="/api/v1/patients" method="post">
            <fieldset>
                <label for="firstName"> Nombre:
                    <input 
                    id="firstName" 
                    name="firstName" 
                    type="text" 
                    minlength="3" 
                    maxlength="20"
                    required 
                    />
                </label>
                <label for="lastName"> Apellido: 
                    <input 
                    id="lastName" 
                    name="lastName" 
                    type="text" 
                    minlength="5"
                    maxlength="20" 
                    required 
                    />
                </label>
                <label for="age"> Edad:
                    <input 
                    type="number" 
                    name="age" 
                    min="18" 
                    max="100" 
                    required
                    />
                </label>
                <label for="phone"> Teléfono:
                    <input 
                    type="number" 
                    name="phone" 
                    required
                    />
                </label>
                <label for="cedula"> Cédula:
                    <input 
                    type="number" 
                    name="cedula" 
                    required
                    />
                </label>
                <button type="submit" name="submit">Create Patient</button>
            </fieldset>
        </form>
        <form id="searchForm" method="get" action="/api/v1/patients">
            <label for="patientCedula"> Get specific patient by cedula 
                <input 
                type="number" 
                id="patientCedula" 
                required
                />
            </label>
            <button type="submit">Find Patient</button>
        </form>
        <form id="deleteForm">
            <label for="cedula">Eliminar paciente por cedula:</label>
            <input type="number" id="cedula" required>
            <button type="submit">Eliminar</button>
        </form>

        <form  method="get" action="/api/v1/patients">
            <p>Get All Patients</p>
            <button type="submit">Find All</button>
        </form>
    </main>
</div>

<script src="/js/getPatientByCedula.js"></script>
<script src="/js/deletePatientByCedula.js"></script>

<%- include('footer') %>
